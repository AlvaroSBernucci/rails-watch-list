<nav class="navbar bg-primary navbar-expand-lg p-2">
  <div class="container-fluid">
    <%= link_to "Movies Lists", lists_path, class: "navbar-brand text-light fw-semibold" %>
    <%= link_to "New List", new_list_path, class: "btn btn-info rounded-3 fw-semibold" %>
  </div>
</nav>
<div class="banner">
  <div class="container">
    <h1 class="fs-1"><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <%= link_to "Back to lists", lists_path, class: "btn btn-info rounded-3 mt-5 mb-5 fw-semibold" %>
  <%= link_to "Add new movie", new_list_bookmark_path(@list), class: "btn btn-info rounded-3 mt-5 mb-5 fw-semibold" %>
  <ul class="show-grid p-0 mt-5">
    <% @list.bookmarks.each do |bookmark| %>
    <li class="card rounded-4">
      <div class="card-img">
        <img src="https://image.tmdb.org/t/p/original/<%= bookmark.movie.poster_url %>" class="card-img-top rounded-top-4" alt="...">
      </div>
      <div class="card-body d-flex flex-column">
        <h5 class="m-0 card-title mb-4"><%= bookmark.movie.title %><span class="text-secondary fs-6 fw-bold"> â€¢ <%= bookmark.movie.rating %> <i class="fa-solid fa-star text-warning"></i></span></h5>
        <p class="card-text mb-auto text-secondary"><%= bookmark.movie.overview %></p>
        <%= link_to "Remove from list", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-info rounded-3 align-self-start mt-4 fw-semibold" %>
      </div>
    </li>
    <% end %>
  </ul>
</div>
